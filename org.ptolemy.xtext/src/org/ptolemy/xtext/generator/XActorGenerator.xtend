					it << '''this.Çport.container.nameÈ.getPort("Çport.nameÈ").link(ÇrelationNameÈ);'''
				}
				if (relation.isConversionRelation) {
					it << '''this.Çrelation.indexedFeatureNameÈ.getPort("input").link(ÇrelationNameÈ);'''
					relationName = relation.indexedFeatureName
					it -> relation << "ptolemy.actor.TypedIORelation" << ''' ÇrelationNameÈ = new ''' << "ptolemy.actor.TypedIORelation" << '''(this, "ÇrelationNameÈ");'''
					it << '''this.ÇrelationNameÈ.getPort("output").link(ÇrelationNameÈ);'''
