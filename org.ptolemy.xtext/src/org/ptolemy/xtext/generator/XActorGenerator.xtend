	def boolean accepts(Iterable<String> tags, String actionName) {
		for (tag : tags) {
			if (actionName.startsWith(tag) && (actionName.length() == tag.length() || actionName.charAt(tag.length()) == '.')) {
				return true;
			}
		}
		return false;
	}

